<Window x:Class="App.Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App.Library"
        xmlns:localTemplates="clr-namespace:App.Library.Templates"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="8"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styling/Styling.xaml"/>
                <ResourceDictionary Source="Templates/Index.xaml"/>
                <ResourceDictionary>
                    <localTemplates:LocalDataTemplateSelector x:Key="LocalDataTemplateSelector"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource BackgroundBrush}">
        <ContentControl Grid.Row="0"
                        Content="{Binding ActiveContent}" 
                        ContentTemplateSelector="{DynamicResource LocalDataTemplateSelector}">
        </ContentControl>
    </Grid>
</Window>
