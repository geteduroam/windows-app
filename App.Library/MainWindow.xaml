<Window
    x:Class="App.Library.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:App.Library.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:App.Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:templates="clr-namespace:App.Library.Templates"
    xmlns:lang = "clr-namespace:EduRoam.Localization;assembly=EduRoam.Localization"
    Title="geteduroam"
    Width="420"
    Height="600"
    MinWidth="420"
    MinHeight="420"
    MaxWidth="420"
    Closing="MainWindow_OnClosing"
    mc:Ignorable="d">
    <!--<WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="8" />
    </WindowChrome.WindowChrome>-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styling/Styling.xaml" />
                <ResourceDictionary Source="Templates/_Index.xaml" />
                <ResourceDictionary>
                    <templates:LocalDataTemplateSelector x:Key="LocalDataTemplateSelector" />
                    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
                    <converters:ImageConverter x:Key="ImageConverter" />
                    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="50">
            <Image Source="{Binding Converter={StaticResource ImageConverter}, ConverterParameter=eduroam_logo.png}" Stretch="Uniform" />
        </Grid>

        <Grid
            Grid.Row="1"
            Grid.RowSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{DynamicResource BackgroundBrush}"
            Opacity="0.5"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
            ZIndex="100">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Text="{x:Static lang:Resources.Loading}"
                TextAlignment="Center" />
        </Grid>

        <Grid
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
            Visibility="{Binding ActiveContent, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button
                Grid.Row="1"
                Width="186"
                Height="56"
                Margin="0,0,0,32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding NewProfileCommand}"
                Style="{DynamicResource BlueButtonStyle}">
                <TextBlock
                    x:Name="tbNewProfile"
                    Text="{x:Static lang:Resources.ConnectToEduroam}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </Button>
        </Grid>

        <ContentControl
            Grid.Row="1"
            Content="{Binding ActiveContent}"
            ContentTemplateSelector="{DynamicResource LocalDataTemplateSelector}" />

        <Grid Grid.Row="2" Visibility="{Binding ActiveContent, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=inverse}">
            <Button x:Name="btnMenu2" Width="32" Height="32" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12" FontSize="24" Click="OpenMenu">
                <Image Width="24" Height="24" Grid.Row="1">
                    <Image.Source>
                        <DrawingImage>
                            <DrawingImage.Drawing>
                                <GeometryDrawing Brush="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" 
                                     Geometry="F0 M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
                            </DrawingImage.Drawing>
                        </DrawingImage>
                    </Image.Source>
                </Image>
                <Button.ContextMenu>
                    <ContextMenu x:Name="ctMenuSettings">
                        <MenuItem Header="{x:Static lang:Resources.MenuItemLoadEAP}" Click="LoadEapFile"/>
                        <Separator/>
                        <MenuItem Header="{x:Static lang:Resources.MenuItemRefresh}" Click="Refresh"/>
                        <MenuItem Header="{x:Static lang:Resources.MenuItemReauthenticate}" Click="Reauthenticate"/>
                        <Separator/>
                        <MenuItem Header="{x:Static lang:Resources.MenuItemRemoveProfile}" Click="RemoveProfile"/>
                        <MenuItem Header="{x:Static lang:Resources.MenuItemRemoveCertificates}" Click="RemoveCertificates"/>
                        <MenuItem Header="{x:Static lang:Resources.MenuItemUninstall}" Click="Uninstall"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Width="131"
                    Height="42"
                    Margin="10,10,10,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding ActiveContent.PreviousCommand}"
                    Content="{x:Static lang:Resources.ButtonPrevious}"
                    Style="{DynamicResource BlueButtonStyle}" />

                <Button
                    Width="131"
                    Height="42"
                    Margin="10,10,10,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding ActiveContent.NextCommand}"
                    Content="{x:Static lang:Resources.ButtonNext}"
                    IsDefault="true"
                    Style="{DynamicResource BlueButtonStyle}" />

                <!--<Button Width="32" Height="32" Background="Transparent" BorderBrush="Transparent" Grid.Column="2" x:Name="btnHelp" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="12" Click="btnHelp_Click">
                    <Image Width="24" Height="22" Grid.Row="1">
                        <Image.Source>
                            <DrawingImage>
                                <DrawingImage.Drawing>
                                    <GeometryDrawing Brush="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Geometry="F0 M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
                                </DrawingImage.Drawing>
                            </DrawingImage>
                        </Image.Source>
                    </Image>
                </Button>
                
                <Label Grid.Column="2" x:Name="lblVersion" Content="VERSION" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" FontFamily="Tahoma" FontSize="8"/>
                -->
            </StackPanel>
        </Grid>
    </Grid>
</Window>
