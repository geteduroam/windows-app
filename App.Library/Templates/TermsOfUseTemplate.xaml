<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:App.Library.ViewModels"
    xmlns:lang = "clr-namespace:EduRoam.Localization;assembly=EduRoam.Localization">
    
    <DataTemplate DataType="{x:Type viewModels:TermsOfUseViewModel}">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" Text="{Binding TermsOfUse}" 
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
