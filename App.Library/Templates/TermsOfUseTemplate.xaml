<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:App.Library.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:TermsOfUseViewModel}">
        <Grid
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ScrollViewer.CanContentScroll="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.RowSpan="1"
                Margin="5"
                FontSize="24"
                Text="{Binding LanguageText[TermsOfUseTitle]}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <ScrollViewer
                Grid.Row="1"
                Margin="0"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock
                        Margin="5"
                        Text="{Binding Text}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ScrollViewer>

        </Grid>
    </DataTemplate>

</ResourceDictionary>