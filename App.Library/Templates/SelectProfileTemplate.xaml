<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:App.Library.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:SelectProfileViewModel}">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="tbTitle" TextWrapping="Wrap" Text="{Binding LanguageText[SelectProfile]}" TextAlignment="Center" Margin="8,0,8,16" Grid.Row="0" FontSize="24"/>
            <ListBox x:Name="lbProfiles" ItemContainerStyle="{DynamicResource ListBoxItemStyle}" Grid.Row="1" Margin="24,8"
                     ItemsSource="{Binding Profiles}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>