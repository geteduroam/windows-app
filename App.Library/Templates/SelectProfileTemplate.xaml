<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:App.Library.ViewModels"
    xmlns:lang = "clr-namespace:EduRoam.Localization;assembly=EduRoam.Localization">

    <DataTemplate DataType="{x:Type viewModels:SelectProfileViewModel}">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="tbTitle"
                Grid.Row="0"
                Margin="8,0,8,16"
                FontSize="24"
                Text="{x:Static lang:Resources.SelectProfile}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <ListBox
                x:Name="lbProfiles"
                Grid.Row="1"
                Margin="24,8"
                ItemContainerStyle="{DynamicResource ListBoxItemStyle}"
                ItemsSource="{Binding Profiles}" 
                SelectedItem="{Binding Owner.State.SelectedProfile}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>