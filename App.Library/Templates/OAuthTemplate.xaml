<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:App.Library.ViewModels"
    xmlns:lang="clr-namespace:EduRoam.Localization;assembly=EduRoam.Localization">

    <DataTemplate DataType="{x:Type viewModels:OAuthViewModel}">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="{x:Static lang:Resources.OAuthExplanation}" 
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </Grid>
    </DataTemplate>

</ResourceDictionary>